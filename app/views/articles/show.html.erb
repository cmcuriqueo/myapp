<div class="col-sm-12">
	<p>
	  <strong>Title:</strong>
	  <%= @article.title %>
	</p>
</div>
<div class="col-sm-12">
	<p>
	  <strong>Text:</strong>
	  <%= @article.text %>
	</p>
</div>
<div class="col-sm-12">
	<h2>Comments</h2>
	<%= render @article.comments %>
	 
	<h2>Add a comment:</h2>
	<%= render 'comments/form' %>
	 
	<%= link_to 'Edit', edit_article_path(@article) %> |
	<%= link_to 'Back', articles_path %>
</div>
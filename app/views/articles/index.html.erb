<div class="col-sm-12">
	<h1>Listing Articles</h1>
</div>
<div class="col-sm-12">
	<%= link_to 'New article', new_article_path, class: :'btn btn-primary' %>
</div>

<div class="col-sm-12">
	<table class="table">
		<tr>
			<th>Title</th>
			<th>Text</th>
			<th colspan="3"></th>
		</tr>
	 
	  	<% @articles.each do |article| %>
		    <tr>
				<td><%= article.title %></td>
				<td><%= article.text %></td>
				<td>
					<%= link_to article_path(article), class: :'btn btn-default btn-sm' do %>
						<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Show
					<% end %>
				</td>
				<td>
					<%= link_to edit_article_path(article), class: :'btn btn-default btn-sm' do %>
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
					<% end %>
				</td>
				<td>
					<%= link_to article_path(article),
				      method: :delete,
				      data: { confirm: 'Are you sure?' }, class: :'btn btn-danger btn-sm' do %>
				     	<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Destroy
				    <% end %>
				</td>
		    </tr>
	  	<% end %>
	</table>
</div>
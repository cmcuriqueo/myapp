<%= form_for(@user, html: { class: :form }) do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name, class: 'form-control' %>
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email, class: 'form-control' %>
  </p>
  <p>
    <%= form.submit :class => 'btn btn-primary' %>
  </p>
<% end %>